{
  "name": "@cnc/api",
  "version": "1.0.0",
  "description": "REST API server for CNC G-code sender",
  "main": "src/ui/api/server.js",
  "type": "module",
  "scripts": {
    "start": "node src/ui/api/server.js",
    "dev": "npm run docs:mcp-generate && nodemon src/ui/api/server.js",
    "test": "node --experimental-vm-modules node_modules/.bin/jest",
    "test:watch": "node --experimental-vm-modules node_modules/.bin/jest --watch",
    "test:coverage": "node --experimental-vm-modules node_modules/.bin/jest --coverage",
    "test:unit": "node --experimental-vm-modules node_modules/.bin/jest --testPathPattern='src.*__tests__'",
    "test:integration": "node --experimental-vm-modules node_modules/.bin/jest --testPathPattern='integration'",
    "docs:mcp-generate": "node scripts/mcp/generate-docs.js",
    "docs:mcp-watch": "nodemon --watch src/ui/api --exec 'npm run docs:mcp-generate'",
    "lint": "eslint src/",
    "build": "echo 'No build step required for ES modules'"
  },
  "dependencies": {
    "@cnc/core": "file:../cnc-core",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "helmet": "^7.0.0",
    "morgan": "^1.10.0",
    "multer": "^2.0.1",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.0"
  },
  "keywords": [
    "gcode",
    "cnc",
    "serial",
    "machining",
    "grbl"
  ],
  "author": "",
  "license": "MIT",
  "bin": {
    "gcode-sender": "./main.js"
  },
  "devDependencies": {
    "@babel/core": "^7.27.7",
    "@babel/preset-react": "^7.27.1",
    "@babel/register": "^7.27.1",
    "esbuild": "^0.25.5",
    "esbuild-node-loader": "^0.8.0",
    "jest": "^30.0.2"
  }
}
